<!-- promotion.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exclusive Offer - Discoun3</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .email-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header {
            background-color: #003366;
            color: #ffffff;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }

        .offer {
            padding: 20px;
            text-align: center;
        }

        .offer h2 {
            font-size: 24px;
            color: #333;
        }

        .button {
            background-color: #28a745;
            color: white;
            padding: 15px 25px;
            text-decoration: none;
            border-radius: 50px;
            font-size: 16px;
            margin-top: 20px;
        }

        .footer {
            background-color: #f8f8f8;
            color: #333;
            padding: 20px;
            font-size: 12px;
            text-align: center;
        }

        .footer a {
            color: #007bff;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="email-container">
        <div class="header">
            <h2>Special Offer Just for You!</h2>
        </div>
        <div class="offer">
            <h2>Get 20% off on your next purchase</h2>
            <p>As a valued member of Discoun3, we are offering you a limited-time 20% discount on your next purchase!
                Use code <strong>DISCOUNT20</strong> at checkout.</p>
            <a href="<%= promoLink %>" class="button">Claim Offer</a>
        </div>
        <div class="footer">
            <p>Discoun3, All rights reserved.</p>
            <p><a href="https://discoun3ree.com/unsubscribe">Unsubscribe</a> | <a
                    href="https://discoun3ree.com/support">Contact Support</a></p>
        </div>
    </div>
</body>

</html>