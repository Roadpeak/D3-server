<!-- setPassword.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Password - Discoun3</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .email-container {
            width: 100%;
            background-color: #ffffff;
            padding: 40px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .header {
            background-color: #003366;
            color: #ffffff;
            padding: 20px;
            border-radius: 8px 8px 0 0;
        }

        .content {
            padding: 30px;
        }

        .button {
            background-color: #007bff;
            color: white;
            padding: 15px 25px;
            text-decoration: none;
            border-radius: 50px;
            font-size: 16px;
            display: inline-block;
            margin-top: 20px;
        }

        .footer {
            background-color: #f8f8f8;
            color: #333;
            padding: 20px;
            font-size: 12px;
            text-align: center;
        }

        .footer a {
            color: #007bff;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="email-container">
        <div class="header">
            <h2>Welcome to Discoun3</h2>
        </div>
        <div class="content">
            <h3>Hi <%= name %>,</h3>
            <p>We received a request to set your password. To set your new password, click the button below:</p>
            <a href="<%= resetLink %>" class="button">Set Password</a>
            <p>If you didn't request this, you can safely ignore this email.</p>
        </div>
        <div class="footer">
            <p>Discoun3, All rights reserved.</p>
            <p><a href="https://discoun3ree.com/unsubscribe">Unsubscribe</a> | <a
                    href="https://discoun3ree.com/support">Contact Support</a></p>
        </div>
    </div>
</body>

</html>